<script type="text/javascript">
  cutOffVote();
</script>

<div class="container">
  <section>
    <div class="row">
      <div class="col m2">
      </div>
    <%= form_tag("/flavors", id: "flavor_friday_form",  class: "col m8 s12 flv_vote_f center", method: :post) do %>
      <h3 class="center">Votes must be in by 5:00 pm Wednesday</h3>
          <!-- <div class="input-field col s12"> -->
          <input type="hidden" name="name" id="flv_vote">
            <select id="flv_select">
              <optgroup label="Water Ices">
                <%=@flavor_waters.each do |f| %>
                  <%= tag.option("#{f.name}", value: "#{f.id}") %>
                  <% @cnt+=1 %>
                <% end %>
              </optgroup>
              <optgroup label="Creme Ices">
                <%=@flavor_cremes.each do |f| %>
                  <%= tag.option("#{f.name}", value: "#{f.id}") %>
                  <% @cnt+=1 %>
                <% end %>
              </optgroup>
            </select>
            <input type="hidden" name="flv_vote" id="flv_vote" data-remote="true">
            <label>Rockaway Ice Lady Flavors</label>
          <!-- </div> -->
          <%= submit_tag("Submit", class: "flv_f_btn") %>
        <% end %>
      </div>
    <div class="col m2">
    </div>
    <div class="row">
      <div class="col s12 flv_vote_cl">
        <h1 class="center">Voting for this Friday is Closed</h1>
        <h3 class="center">Voting resumes on Friday</h3>
    </div>
  </section>
</div>
