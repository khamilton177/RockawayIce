<script type="text/javascript">
  cutOffVote();
</script>

<div class="container">
  <div class="row">
    <div class="col m1 l2">
    </div>
    <div class="flv_f_div s12 m10 l8 center">
      <div class="flv_vote_cl center">
        <h1 class="flv_cl_1">Voting for this Friday is Closed</h1>
        <h3 class="flv_cl_3">Voting resumes on Friday</h3>
        <%=image_tag("girl_lick2.jpg", class: "flv_img")%>
      </div>
      <%= form_tag("/flavors", id: "flavor_friday_form", class: "flv_f", method: :post) do %>
        <h3 class="center">Votes must be in by 5:00 pm Wednesday</h3>
        <%= hidden_field(:flavor, :id) %>
        <select id="flv_select">
          <optgroup label="Water Ices">
            <%=@flavor_waters.each do |f| %>
              <%= tag.option("#{f.name}", value: "#{f.id}") %>
              <% @cnt+=1 %>
            <% end %>
          </optgroup>
          <optgroup label="Creme Ices">
            <%=@flavor_cremes.each do |f| %>
              <%= tag.option("#{f.name}", value: "#{f.id}") %>
              <% @cnt+=1 %>
            <% end %>
          </optgroup>
        </select>
        <label>Rockaway Ice Lady Flavors</label>
        <%= submit_tag("Submit", class: "flv_f_btn") %>
      <% end %>
    </div>
    <div class="col m1 l2">
    </div>
  </div>
</div>
