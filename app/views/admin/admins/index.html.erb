<div class="container">
  <div class="row">
    <div class="col m1 l3">
    </div>
    <div class="cnt_f_div s12 m10 l6 center">
      <% if current_user %>
        <h2>Signed in as <strong><%= current_user.username %></strong>!</h2>

        <%= link_to "Sign out", signout_path, id: "sign_out" %>
        <div class="row">
        <div class="col s12">
          <ul class="tabs">
            <li class="tab col s3"><a href="#test1">Admins</a></li>
            <li class="tab col s3"><a class="active" href="#test2">Flavors</a></li>
            <li class="tab col s3"><a href="#test3">Locations</a></li>
          </ul>
        </div>
        <div id="test1" class="col s12">Test 1</div>
        <div id="test2" class="col s12">Test 2</div>
        <div id="test3" class="col s12">Test 3</div>
      </div>
      <% else %>
        <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
      <% end %>
    </div>
    <div class="m1 l3">
    </div>
  </div>
</div>
